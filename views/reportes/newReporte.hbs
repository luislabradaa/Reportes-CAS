<div class="card bg-info mt-5">
  <div class="card-body bg-info">
    <form action="/add" method="post" enctype="multipart/form-data">
      <div class="input-group mb-3">
        <label
          for="adscripcion"
          class="input-group-text bg-secondary"
        >ADSCRIPCION /<br /> FACULTAD</label>
        <input
          type="text"
          class="form-control"
          name="adscripcion"
          id="adscripcion"
          required
        />
      </div>
      <div class="input-group mb-3">
        <label
          for="usuario"
          class="input-group-text bg-secondary"
        >USUARIO</label>
        <input type="text" class="form-control" name="usuario" required />
      </div>
      <div class="input-group mb-3">
        <label
          for="problema"
          class="input-group-text bg-secondary"
        >PROBLEMA</label>
        <textarea
          class="form-control"
          name="problema"
          id="problema"
          rows="3"
          required
        ></textarea>
      </div>
      <div class="input-group mb-3">
        <label for="solucion" class="input-group-text bg-secondary">DIAGNOSTICO
          /<br />
          SOLUCION</label>
        <textarea
          class="form-control"
          name="solucion"
          id="solucion"
          rows="3"
          required
        ></textarea>
      </div>
      <div class="input-group mb-3" id="campoUser">
        <label
          for="atendio"
          class="input-group-text bg-secondary"
        >ATENDIO</label>
        <input
          type="number"
          class="form-control"
          value="{{id}}"
          name="id_atendio"
          id="atendio"
        />
      </div>

      <div class="input-group mb-3">
        <label for="estado" class="input-group-text bg-secondary">STATUS</label>
        <select
          class="form-select"
          name="estado"
          id="estado"
          aria-label="Default select example"
          required
        >
          <option disabled selected>Selecciona un status</option>
          <option value="ATENDIDO">ATENDIDO</option>
          <option value="PROCESO">PROCESO</option>
          <option value="PENDIENTE">PENDIENTE</option>
        </select>
      </div>

      <div class="input-group mb-3">
        <input
          class="form-control"
          type="file"
          name="evidencia"
          id="evidenciaInput"
          required
        />
      </div>

      <div class="d-flex justify-content-center m-2" id="dBtnEnviar">
        <a href="/menu" class="btn btn-primary m-2">Volver al men√∫</a>
        <button type="submit" class="btn btn-primary m-2">Enviar</button>
      </div>
    </form>
    <hr style="color: #ffffff;" />
    <div class="d-flex justify-content-center">
      <img
        class="container-fluid"
        style="width: 45%;"
        src="/images/logos.png"
      />
    </div>
  </div>
</div>